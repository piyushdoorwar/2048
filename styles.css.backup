    :root{
      --bg:#0d0d0d;
      --panel:#1a1a1a;
      --panel-2:#242424;
      --accent:#6c63ff;
      --accent-2:#00d9ff;
      --accent-yellow:#ffd93d;
      --accent-gradient: linear-gradient(135deg, #6c63ff 0%, #00d9ff 100%);
      --text:#ffffff;
      --text-secondary:#a0a0a0;
      --muted:#666666;
      --cell:rgba(255,255,255,.03);
      --tile:#2a2f4a;
      --radius:20px;
      --gap:14px;
      --shadow:0 4px 20px rgba(0,0,0,.6);
      --shadow-lg:0 8px 40px rgba(0,0,0,.8);
      --app-pad: clamp(20px, 3vw, 40px);
      --card-border: rgba(255,255,255,.06);
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0;
      font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      color:var(--text);
      background:var(--bg);
      background-attachment: fixed;
      min-height:100svh;
      display:flex; align-items:center; justify-content:center;
      padding:var(--app-pad);
      overflow:hidden;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    .app{
      width:min(96vw,560px);
      display:flex;
      flex-direction:column;
      position:relative;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
      animation: appFadeIn 0.6s ease-out;
    }

    @media (max-width: 600px) {
      body { padding: 0; }
      .app { width: 100vw; max-height: 100svh; padding: 12px; }
      header { margin-bottom: 8px; flex-direction: column; gap: 8px; padding: 16px; }
      .scorebar { display: grid; grid-template-columns: 1fr 1fr; gap: 8px; justify-items: stretch; width: 100%; }
      .pill { padding: 12px 16px; min-width: unset; }
      .pill .label { font-size: 10px; letter-spacing: 1px; }
      .pill .value { font-size: 24px; }
      .toolbar { margin: 8px 0 12px; gap: 8px; }
      .board { max-width: 520px; }
      .footer { margin-top: auto; padding-top: 8px; font-size: 11px; }
      .btn { padding: 12px 16px; min-height: 48px; font-size: 13px; }
    }
    header{
      display:flex; 
      flex-direction:row; 
      justify-content:space-between; 
      align-items:center; 
      gap:20px; 
      margin-bottom:20px;
      padding:24px 20px;
      background:var(--panel);
      border-radius:var(--radius);
      border:1px solid var(--card-border);
      position:relative;
    }
    .title{
      font-weight:900; 
      letter-spacing:1px; 
      font-size6px 10px;
      border-radius: 12px;
      font-weight: 900;
      font-size: clamp(36px, 5vw, 52px);
      margin: 0 2px;
      box-shadow: 
        0 6px 16px rgba(0,0,0,.3),
        inset 0 1px 0 rgba(255,255,255,.3);
      line-height: 1;
      animation: digitFloat 3s ease-in-out infinite;
      transform-origin: center;
      position:relative;
    }
    .digit::after {
      content:'';
      position:absolute;
      inset:0;
      border-radius:12px;
      background:linear-gradient(180deg, rgba(255,255,255,.2) 0%, transparent 50%);
      pointer-events:none
      padding: 4px 8px;
      border-radius: 8px;
      font-weight: 900;
      font-size: clamp(34px, 4.5vw, 48px);
      margin: 0 1px;
      box-shadow: 0 4px 8px rgba(0,0,0,.2);
      line-height: 1;
      animation: digitFloat 3s ease-in-out infinite;
      transform-origin: center;
    }
    .digit:nth-child(1) { animation-delay: 0s; }
    .digit:nth-child(2) { animation-delay: 0.5s; }
    .digit:nth-child(3) { animation-delay: 1s; }
    .digit:nth-child(4) { animation-delay: 1.5s; }
    .digit[data-value="2"] { background: #eee4da; color: #776e65; }
    .digit[data-value="0"] { background: #a8d5ba; color: #f9f6f2; }
    .digit[data-value="4"] { background: #ede0c8; color: #776e65; }
    .digit[data-value="8"] { background: #f2b179; color: #f9f6f2; }

    @media (min-width: 601px) {
      .pill { padding: 14px 20px; min-width: 110px; }
      .pill .label { font-size: 11px; letter-spacing: 1.5px; }
      .pill .value { font-size: 28px; }
    }

    /* Tablet styles */
    @media (min-width: 768px) and (max-width: 1023px) {
      .app { width: min(90vw, 600px); }
      .pill { min-width: 130px; }
      header { padding: 24px; }
    }

    /* Desktop styles */
    @media (min-width: 1024px) {
      .app { width: min(80vw, 650px); }
      .pill { min-width: 150px; }
      header { padding: 24px; }
    }

    /* Landscape orientation on small screens (e.g., foldables or mobiles) */
    @media (max-width: 767px) and (orientation: landscape) {
      .app { width: min(90vw, 500px); max-height: 90vh; }
      header { margin-bottom: 4px; padding: 12px; }
      .toolbar { margin-bottom: 6px; }
    }

    @media (max-width: 600px) {
      header{justify-content:center;}
      .title { font-size: clamp(32px, 8vw, 48px); }
    }
    .scorebar{display:flex; gap:12px; justify-content:flex-end; flex-wrap:wrap}
    .pill{
      background:linear-gradient(135deg, rgba(108,99,255,.12) 0%, rgba(0,217,255,.08) 100%);
      backdrop-filter:blur(20px);
      padding:14px 20px; 
      border-radius:16px; 
      box-shadow:
        0 8px 24px rgba(0,0,0,.4),
        inset 0 1px 0 rgba(255,255,255,.1);
      border:1px solid rgba(255,255,255,.08);
      min-width:140px; 
      text-align:center; 
      transition: transform 0.2s ease, box-shadow 0.3s ease;
      position:relative;
      overflow:hidden;
    }
    .pill::before {
      content:'';
      position:absolute;
      top:0;
      left:0;
      right:0;
      height:1px;
      background:linear-gradient(90deg, transparent, rgba(255,255,255,.2), transparent);
    }
    .pill:hover {
      transform: translateY(-2px);
      box-shadow: 
        0 12px 32px rgba(108,99,255,.3),
        inset 0 1px 0 rgba(255,255,255,.15);
    }
    .pill .label{
      font-size:11px; 
      color:var(--muted);
      text-transform:uppercase;
      letter-spacing:1.5px;
      font-weight:600;
    }
    .pill .value{
      font-weight:900; 
      font-size:28px; 
      background:var(--accent-gradient);
      -webkit-background-clip:text;
      -webkit-text-fill-color:transparent;
      background-clip:text;
      transition: transform 0.3s ease;
    }
    .pill .value.score-bump {
      animation: scoreBump 0.3s ease-out;
    }

    .toolbar{
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(130px, 1fr)); 
      gap:12px; 
      margin:12px 0 16px;
    }
    .volume-control {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
      border: 1px solid var(--card-border);
      color: var(--text);
      padding: 14px 18px;
      border-radius: 16px;
      box-shadow: var(--shadow);
      min-height: 48px;
      transition: all 0.2s ease;
    }
    .volume-control:hover {
      border-color: rgba(108,99,255,.3);
      box-shadow: 0 8px 24px rgba(108,99,255,.2);
    }
    #soundBtn {
      cursor: pointer;
      user-select: none;
      width: 100%;
      text-align: center;
    }
    .volume-slider {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      display: none;
      padding: 10px 14px;
      box-sizing: border-box;
      align-items: center;
      gap: 8px;
    }
    .volume-slider input[type="range"] {
      flex: 1;
      -webkit-appearance: none;
      appearance: none;
      height: 6px;
      background: #30385b;
      border-radius: 3px;
      outline: none;
    }
    .volume-slider input[type="range"]::-webkit-slider-thumb {
      -webkit-appearance: none;
      appearance: none;
      width: 16px;
      height: 16px;
      background: var(--accent);
      border-radius: 50%;
      cursor: pointer;
    }
    .volume-slider input[type="range"]::-moz-range-thumb {
      width: 16px;
      height: 16px;
      background: var(--accent);
      border-radius: 50%;
      cursor: pointer;
      border: none;
    }
    .btn{
      background:linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
      border:1px solid var(--card-border);
      color:#ffffff;
      padding:14px 18px; 
      border-radius:16px; 
      cursor:pointer; 
      display:inline-flex; 
      align-items:center; 
      justify-content:center; 
      gap:8px; 
      font-weight:600; 
      box-shadow:var(--shadow);
      transition:all .2s ease;
      user-select:none;
      min-height:48px;
      position:relative;
      overflow:hidden;
      font-size:14px;
    }
    .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
      transition: left 0.5s ease;
    }
    .btn:hover::before {
      left: 100%;
    }
    .btn:hover {
      transform: translateY(-2px);
      border-color: rgba(108,99,255,.3);
      box-shadow: 0 12px 32px rgba(108,99,255,.25);
    }
    .btn:active {
      transform: translateY(0px) scale(0.98);
      box-shadow: var(--shadow);
    }
    .btn:focus {
      outline: none;
      box-shadow: 0 0 0 3px rgba(108,99,255,0.4), var(--shadow);
    }
    .btn:disabled {
      display: none;
    }
    .btn.primary{
      background:var(--accent-gradient);
      border:1px solid rgba(108,99,255,.5);
      color:#ffffff;
      font-weight:700;
      text-shadow: 0 1px 2px rgba(0,0,0,0.2);
      box-shadow: 
        0 8px 24px rgba(108,99,255,.4),
        inset 0 1px 0 rgba(255,255,255,.2);
    }
    .btn.primary:hover {
      box-shadow: 
        0 12px 32px rgba(108,99,255,.6),
        inset 0 1px 0 rgba(255,255,255,.3);
      transform: translateY(-2px) scale(1.02);
    }
    .btn.primary:active {
      transform: translateY(0) scale(0.98);
      box-shadow: 
        0 4px 16px rgba(108,99,255,.3),
        inset 0 1px 0 rgba(255,255,255,.1);
    }
    .btn.ghost{
      background:transparent;
      border:1px solid rgba(255,255,255,.1);
      color:var(--text-secondary);
      font-weight:500;
    }
    .btn.ghost:hover {
      background: rgba(108,99,255,0.1);
      border-color: rgba(108,99,255,.3);
      color: var(--text);
      box-shadow: 0 8px 24px rgba(108,99,255,.2);
    }

    .board{
      position:relative;
      width:min(100%, 520px, 70svh);
      aspect-ratio:1/1;
      overflow:hidden;
      background:
        linear-gradient(135deg, rgba(108,99,255,.03) 0%, transparent 50%, rgba(0,217,255,.03) 100%),
        linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
      border-radius:var(--radius); 
      padding:var(--gap);
      box-shadow:
        var(--shadow-lg),
        inset 0 1px 0 rgba(255,255,255,0.08),
        0 0 0 1px var(--card-border);
      touch-action:none;
      border: 1px solid var(--card-border);
      position:relative;
    }
    .board::before {
      content:'';
      position:absolute;
      inset:0;
      border-radius:var(--radius);
      background:
        linear-gradient(135deg, rgba(108,99,255,.05) 0%, transparent 30%, rgba(0,217,255,.05) 100%);
      opacity:0.5;
      pointer-events:none;
    }
    .grid{position:absolute; inset:var(--gap); display:grid; grid-template-columns:repeat(4,1fr); grid-template-rows:repeat(4,1fr); gap:var(--gap)}
    .cell{
      background: rgba(255,255,255,.03);
      border-radius:18px; 
      border:1px solid rgba(255,255,255,.04);
      backdrop-filter: blur(4px);
      box-shadow: 
        inset 0 1px 2px rgba(255,255,255,0.05), 
        inset 0 -1px 2px rgba(0,0,0,0.1);
      transition: all 0.2s ease;
    }
    .cell:hover {
      background: rgba(255,255,255,.05);
      border-color: rgba(255,255,255,.06);
    }

    .tile{
      left:0; top:0; 
      position:absolute; 
      border-radius:18px;
      will-change:transform; 
      transition: transform .12s ease-out; 
      z-index:10;
    }
    .tile-inner{
      width:100%;
      height:100%;
      border-radius:18px;
      display:flex; 
      align-items:center; 
      justify-content:center; 
      font-weight:900; 
      font-size:clamp(24px,6vw,40px); 
      box-shadow:
        0 12px 24px rgba(0,0,0,.25),
        inset 0 1px 0 rgba(255,255,255,.3),
        0 0 0 1px rgba(255,255,255,.1);
      color:#1a1d2e;
      background:#fff;
      user-select:none;
      -webkit-tap-highlight-color: transparent;
      transition: transform 0.15s ease;
      position:relative;
    }
    .tile-inner::before {
      content:'';
      position:absolute;
      inset:0;
      border-radius:18px;
      background:linear-gradient(180deg, rgba(255,255,255,.15) 0%, transparent 50%);
      pointer-events:none;
    }
    
    .tile[data-value="2"] .tile-inner{background: linear-gradient(135deg, #eee4da 0%, #ede0c8 50%, #eee4da 100%); color:#776e65}
    .tile[data-value="4"] .tile-inner{background: linear-gradient(135deg, #ede0c8 0%, #f2b179 50%, #ede0c8 100%); color:#776e65}
    .tile[data-value="8"] .tile-inner{background: linear-gradient(135deg, #f2b179 0%, #f59563 50%, #f2b179 100%); color:#f9f6f2}
    .tile[data-value="16"] .tile-inner{background: linear-gradient(135deg, #f59563 0%, #f67c5f 50%, #f59563 100%); color:#f9f6f2}
    .tile[data-value="32"] .tile-inner{background: linear-gradient(135deg, #f67c5f 0%, #f65e3b 50%, #f67c5f 100%); color:#f9f6f2}
    .tile[data-value="64"] .tile-inner{background: linear-gradient(135deg, #f65e3b 0%, #edcf72 50%, #f65e3b 100%); color:#f9f6f2}
    .tile[data-value="128"] .tile-inner{background: linear-gradient(135deg, #edcf72 0%, #edcc61 50%, #edcf72 100%); color:#f9f6f2; box-shadow:0 0 0 1px rgba(243,215,116,.35), inset 0 1px 0 rgba(255,255,255,.25)}
    .tile[data-value="256"] .tile-inner{background: linear-gradient(135deg, #edcc61 0%, #edc850 50%, #edcc61 100%); color:#f9f6f2}
    .tile[data-value="512"] .tile-inner{background: linear-gradient(135deg, #edc850 0%, #edc53f 50%, #edc850 100%); color:#f9f6f2; box-shadow:0 0 0 1px rgba(237,197,80,.35), inset 0 1px 0 rgba(255,255,255,.25)}
    .tile[data-value="1024"] .tile-inner{background: linear-gradient(135deg, #edc53f 0%, #edc22e 50%, #edc53f 100%); color:#f9f6f2; box-shadow:0 0 0 1px rgba(237,194,46,.35), inset 0 1px 0 rgba(255,255,255,.25)}
    .tile[data-value="2048"] .tile-inner{background: linear-gradient(135deg, #edc22e 0%, #edc22e 50%, #edc22e 100%); color:#f9f6f2; box-shadow:0 0 0 1px rgba(237,194,46,.35), inset 0 1px 0 rgba(255,255,255,.25), 0 0 20px rgba(237,194,46,0.5); animation: superTile 2s ease-in-out infinite alternate;}
    .tile[data-value="4096"] .tile-inner{background: linear-gradient(135deg, #dc22ee 0%, #dc22ee 50%, #dc22ee 100%); color:#f9f6f2; box-shadow:0 0 0 1px rgba(220,34,238,.35), inset 0 1px 0 rgba(255,255,255,.25), 0 0 25px rgba(220,34,238,0.6); animation: superTile 2s ease-in-out infinite alternate;}
    .tile[data-value="8192"] .tile-inner{background: linear-gradient(135deg, #9c22ee 0%, #9c22ee 50%, #9c22ee 100%); color:#f9f6f2; box-shadow:0 0 0 1px rgba(156,34,238,.35), inset 0 1px 0 rgba(255,255,255,.25), 0 0 30px rgba(156,34,238,0.7); animation: superTile 2s ease-in-out infinite alternate;}

    .tile-inner:hover{
      transform: scale(1.05);
    }
    .tile-inner.tile-merge{
      animation: tilePopIn .2s ease-out;
    }
    @keyframes tilePopIn{
      0%{transform:scale(0.8)} 
      50%{transform:scale(1.1)} 
      100%{transform:scale(1)}
    }

    .hint{color:var(--muted); font-size:13px; margin-top:10px}

    .overlay{
      position:absolute; 
      inset:0; 
      background:rgba(10,13,21,.85);
      z-index:100;
      display:none; 
      align-items:center; 
      justify-content:center; 
      backdrop-filter: blur(12px);
      border-radius:var(--radius);
      animation: overlayFade 0.3s ease-out;
    }
    .overlay.show{display:flex}
    .card{
      background: linear-gradient(135deg, var(--panel) 0%, var(--panel-2) 100%);
      border:1px solid rgba(255,255,255,0.1);
      border-radius:24px;
      padding:32px;
      width:min(92vw,450px);
      box-shadow: var(--shadow-lg), inset 0 1px 0 rgba(255,255,255,0.1);
      backdrop-filter: blur(20px);
      transform: scale(0.95) translateY(20px);
      opacity: 0;
      animation: cardAppear 0.4s ease-out 0.1s forwards;
    }
    .card h3{
      margin:0 0 16px; 
      font-size:28px; 
      font-weight:800; 
      background:var(--accent-gradient);
      -webkit-background-clip:text;
      -webkit-text-fill-color:transparent;
      background-clip:text;
    }
    .card p{color:var(--text-secondary); margin:0 0 20px; line-height:1.6; font-size:16px;}
    .list{margin:0; padding-left:16px; color:var(--muted)}
    .list li{margin:8px 0}
    .row{display:flex; gap:12px; justify-content:flex-end}

    .footer{
      margin-top:auto; 
      padding-top:16px; 
      font-size:13px; 
      color:var(--muted); 
      text-align:center;
      font-weight:500;
    }

    
    .toast-slot{
      position:relative;
      z-index:60;
      margin:10px 0 16px;
      height:52px;
      display:flex;
      align-items:center;
    }
    .toast{
      width:100%;
      padding:14px 18px;
      border-radius:16px;
      background:linear-gradient(135deg, rgba(108,99,255,.15), rgba(0,217,255,.1));
      border:1px solid rgba(108,99,255,.3);
      box-shadow:var(--shadow);
      color:var(--text);
      font-weight:700;
      backdrop-filter: blur(20px);
      opacity:0;
      transform:translateY(-8px);
      pointer-events:none;
      transition:opacity .2s ease, transform .2s ease;
    }
    .toast.show{
      opacity:1;
      transform:translateY(0);
    }

    .tile.hint {
      animation: hintGlow 2s infinite ease-in-out;
    }
    .tile.hint::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 20px;
      color: #fff;
      text-shadow: 0 0 5px rgba(0,0,0,0.8);
      z-index: 1;
    }
    .tile.hint-left::after { content: '←'; }
    .tile.hint-right::after { content: '→'; }
    .tile.hint-up::after { content: '↑'; }
    .tile.hint-down::after { content: '↓'; }
    @keyframes hintGlow {
      0%, 100% { 
        box-shadow: 0 12px 24px rgba(0,0,0,.25), inset 0 1px 0 rgba(255,255,255,.3), 0 0 0 1px rgba(255,255,255,.1), 0 0 10px rgba(108,99,255,.4); 
      }
      50% { 
        box-shadow: 0 12px 24px rgba(0,0,0,.25), inset 0 1px 0 rgba(255,255,255,.3), 0 0 0 1px rgba(255,255,255,.1), 0 0 20px rgba(108,99,255,.7); 
      }
    }
    .board.win{
      animation: winPulse 0.6s ease-out;
    }
    @keyframes winPulse{
      0%{transform: scale(1)} 
      50%{transform: scale(1.03)} 
      100%{transform: scale(1)}
    }
    @keyframes pulse {
      0% { box-shadow: 0 8px 24px rgba(108,99,255,0.3); }
      100% { box-shadow: 0 12px 32px rgba(108,99,255,0.5); }
    }
    @keyframes digitFloat {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-3px); }
    }
    @keyframes scoreBump {
      0% { transform: scale(1); }
      50% { transform: scale(1.15); }
      100% { transform: scale(1); }
    }
    @keyframes overlayFade {
      0% { background: rgba(10,13,21,0); backdrop-filter: blur(0px); }
      100% { background: rgba(10,13,21,0.85); backdrop-filter: blur(12px); }
    }
    @keyframes cardAppear {
      0% { transform: scale(0.95) translateY(20px); opacity: 0; }
      100% { transform: scale(1) translateY(0); opacity: 1; }
    }
    @keyframes appFadeIn {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .confetti {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 150;
      display: none;
    }
    .confetti.show {
      display: block;
    }
    .confetti::before,
    .confetti::after {
      content: '';
      position: absolute;
      width: 10px;
      height: 10px;
      background: var(--accent);
      animation: confettiFall 3s linear infinite;
    }
    .confetti::before {
      left: 10%;
      animation-delay: 0s;
    }
    .confetti::after {
      left: 90%;
      animation-delay: 1s;
    }
    /* Add more confetti pieces */
    .confetti .piece1,
    .confetti .piece2,
    .confetti .piece3,
    .confetti .piece4,
    .confetti .piece5 {
      position: absolute;
      width: 8px;
      height: 8px;
      background: var(--accent-2);
      animation: confettiFall 4s linear infinite;
    }
    .confetti .piece1 { left: 20%; animation-delay: 0.5s; }
    .confetti .piece2 { left: 40%; animation-delay: 1.5s; }
    .confetti .piece3 { left: 60%; animation-delay: 2.5s; }
